{
    "layer": "top",
    "position": "top",
    "margin-top": 8,
    "height": 30,

    "modules-left": [
        "hyprland/workspaces",
        "hyprland/window"
    ],

    "modules-center": [
        "clock"
    ],

    "modules-right": [
        "hyprland/language",
        "pulseaudio",
        "network",
        "battery",
        "user",
        "custom/icon"
    ],

    "hyprland/workspaces": {
        "format": "{name}",
        "persistent-workspaces": {
            "*": 5
        }
    },

    "hyprland/window": {
        "format": "{class}",
	"rewrite": {
	    "google-chrome": "chrome",
	    "com.usebottles.bottles": "bottles"
	},
        "separate-outputs": true,
	"tooltip": false
    },

    "clock": {
        "format-alt": "{:%a, %d. %b  %H:%M}",
        "tooltip": false
    },

    "pulseaudio": {
        "format": "<span color='#484848bf'>vol</span> {volume}%",
        "format-muted": "<span color='#484848bf'>vol</span> muted",
        "scroll-step": 1,
        "on-click": "pavucontrol",
        "ignored-sinks": ["Easy Effects Sink"]
    },

    "network": {
        "interface": "enp9s0",
        "format": "{ifname}",
        "format-ethernet": "<span color='#484848bf'>{ifname}</span> on",
        "format-disconnected": "<span color='#484848bf'>{ifname}</span> off"
    },

    "hyprland/language": {
        "format": "<span color='#484848bf'>layout</span> {}",
        "format-en": "us",
        "format-pt": "br"
    },

    "user": {
        "format": "<span color='#484848bf'>up</span> {work_H}:{work_M}:{work_S}",
        "interval": 1
    },

    "custom/icon": {
        "format": "ó°£‡",
        "tooltip": false
    },

    "battery": {
        "format": "<span color='#484848bf'>batt</span> {capacity}%"
    }
}

